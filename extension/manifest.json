{
  "manifest_version": 2,
  "name": "Texto a Perspective",
  "version": "1.0",
  "description": "Envía texto a un servidor Django para análisis con la API de Perspective.",
  "permissions": [
    "notifications",
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.whatsapp.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}


